<div class="container-xs">
  <%= form_with(model: todo_item) do |form| %>
    <% if todo_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>
        <ul>
          <% todo_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="row mt-4">
    <div class="col-6 col-sm-3">
        <%= form.label :title %>
    </div>
    <div class="col-6 col-sm-3"> 
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6 col-sm-3">
      <%= form.label :due_at %>
    </div>
    <div class="col-6 col-sm-8"> 
      <%= form.datetime_select :due_at %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6 col-sm-6">
      <%= form.submit class:"btn btn-primary" %>
    </div>
    <div class="col-6 col-sm-6"> 
      <%= link_to 'Back', :back, class: "btn btn-light" %>
    </div>
  </div>

  <% end %>
</div>
