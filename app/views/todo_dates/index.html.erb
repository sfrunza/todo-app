<p id="notice"><%= notice %></p>

<h1>Todo Dates</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_dates.each do |todo_date| %>
      <tr>
        <td><%= todo_date.day %></td>
        <td><%= link_to 'Show', todo_date %></td>
        <td><%= link_to 'Delete', todo_date, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Date', new_todo_date_path %>
